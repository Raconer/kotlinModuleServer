<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <!-- 기본 레이아웃 템플릿 정의-->
    <definition name="basic_layout"     template="/WEB-INF/views/layout/basic/basic_layout.jsp">
        <put-attribute name="content"   value=""/>
    </definition>

    <definition name="pBasic_layout"    template="/WEB-INF/views/layout/parallax/basic/pBasic_layout.jsp">
        <put-attribute name="content"   value=""/>
    </definition>

    <definition name="pTimeD_layout"    template="/WEB-INF/views/layout/parallax/timeDifference/pTimeD_layout.jsp">
        <put-attribute name="content"   value=""/>
    </definition>

    <definition name="pLF_layout"    template="/WEB-INF/views/layout/parallax/LFMove/pLF_layout.jsp">
        <put-attribute name="content"   value=""/>
    </definition>

    <definition name="main"             extends="basic_layout">
        <put-attribute name="title"     value="Main"/>
        <put-attribute name="header"    value="/WEB-INF/views/header/basic/basic_h.jsp"/>
        <!--<put-attribute name="body"      value="/WEB-INF/views/main/main.jsp"/>-->
        <put-attribute name="body"      expression="${title}"/>
        <put-attribute name="footer"    value="/WEB-INF/views/footer/notice/notice_f.jsp"/>
    </definition>

    <definition name="pBasic"           extends="pBasic_layout">
        <put-attribute name="title"     value="pBasic"/>
        <put-attribute name="header"    value="/WEB-INF/views/header/parallax/parallaxB_h.jsp"/>
        <put-attribute name="body"      value="/WEB-INF/views/main/main.jsp"/>
        <put-attribute name="footer"    value="/WEB-INF/views/footer/parallax/parallaxB_f.jsp"/>
    </definition>

    <definition name="pTimeD"           extends="pTimeD_layout">
        <put-attribute name="title"     value="pTimeD"/>
        <put-attribute name="header"    value="/WEB-INF/views/header/parallax/parallaxTD_h.jsp"/>
        <put-attribute name="footer"    value="/WEB-INF/views/footer/parallax/parallaxTD_f.jsp"/>
    </definition>

    <definition name="LFMove"           extends="pLF_layout">
        <put-attribute name="title"     value="LFMove"/>
        <put-attribute name="header"    value="/WEB-INF/views/header/parallax/parallaxLF_h.jsp"/>
        <put-attribute name="footer"    value="/WEB-INF/views/footer/parallax/parallaxLF_f.jsp"/>
    </definition>

</tiles-definitions>